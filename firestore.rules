rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to authenticated users on all collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // More specific rules for bookings
    match /bookings/{bookingId} {
        allow read, write: if request.auth != null;
    }

    // More specific rules for submissions
    match /submissions/{submissionId} {
        allow read, write: if request.auth != null;
    }
  }
}
